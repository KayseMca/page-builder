{
  "$schema": "./node_modules/@angular/cli/lib/config/schema.json",
  "version": 1,
  "projects": {
    
    "page-builder": {
      "projectType": "application",
      "schematics": {
        "@schematics/angular:application": {
          "strict": true
        },
        "@schematics/angular:component": {
          "style": "scss"
        }
      },
      "root": "apps/page-builder",
      "sourceRoot": "apps/page-builder/src",
      "prefix": "app",
      "architect": {
        "build": {
          "builder": "@angular-devkit/build-angular:browser",
          "options": {
            "outputPath": "dist/apps/page-builder",
            "index": "apps/page-builder/src/index.html",
            "main": "apps/page-builder/src/main.ts",
            "polyfills": "apps/page-builder/src/polyfills.ts",
            "tsConfig": "apps/page-builder/tsconfig.app.json",
            "assets": [
              "apps/page-builder/src/favicon.ico",
              "apps/page-builder/src/assets",
              {
                "glob": "**/*",
                "input": "./libs/shared-assets/",
                "output": "./assets"
              }
            ],
            "styles": [
              "./node_modules/@angular/material/prebuilt-themes/indigo-pink.css",
              "apps/page-builder/src/styles.scss"
            ],
            "scripts": ["./node_modules/jquery/dist/jquery.min.js"]
          },
          "configurations": {
            "production": {
              "budgets": [
                {
                  "type": "initial",
                  "maximumWarning": "500kb",
                  "maximumError": "2mb"
                },
                {
                  "type": "anyComponentStyle",
                  "maximumWarning": "2kb",
                  "maximumError": "4kb"
                }
              ],
              "fileReplacements": [
                {
                  "replace": "apps/page-builder/src/environments/environment.ts",
                  "with": "apps/page-builder/src/environments/environment.prod.ts"
                }
              ],
              "outputHashing": "all"
            },
            "development": {
              "buildOptimizer": false,
              "optimization": false,
              "vendorChunk": true,
              "extractLicenses": false,
              "sourceMap": true,
              "namedChunks": true
            }
          },
          "defaultConfiguration": "production"
        },
        "serve": {
          "builder": "@angular-devkit/build-angular:dev-server",
          "configurations": {
            "production": {
              "browserTarget": "page-builder:build:production"
            },
            "development": {
              "browserTarget": "page-builder:build:development"
            }
          },
          "defaultConfiguration": "development"
        },
        "extract-i18n": {
          "builder": "@angular-devkit/build-angular:extract-i18n",
          "options": {
            "browserTarget": "page-builder:build"
          }
        },
        "test": {
          "builder": "@angular-devkit/build-angular:karma",
          "options": {
            "main": "apps/page-builder/src/test.ts",
            "polyfills": "apps/page-builder/src/polyfills.ts",
            "tsConfig": "apps/page-builder/tsconfig.spec.json",
            "karmaConfig": "apps/page-builder/karma.conf.js",
            "assets": [
              "apps/page-builder/src/favicon.ico",
              "apps/page-builder/src/assets"
            ],
            "styles": [
              "./node_modules/@angular/material/prebuilt-themes/indigo-pink.css",
              "apps/page-builder/src/styles.scss"
            ],
            "scripts": []
          }
        },
        "server": {
          "builder": "@angular-devkit/build-angular:server",
          "options": {
            "outputPath": "dist/apps/page-builder-server",
            "main": "server.ts",
            "tsConfig": "apps/page-builder/tsconfig.server.json"
          },
          "configurations": {
            "production": {
              "outputHashing": "media",
              "fileReplacements": [
                {
                  "replace": "apps/page-builder/src/environments/environment.ts",
                  "with": "apps/page-builder/src/environments/environment.prod.ts"
                }
              ]
            },
            "development": {
              "optimization": false,
              "sourceMap": true,
              "extractLicenses": false
            }
          },
          "defaultConfiguration": "production"
        },
        "serve-ssr": {
          "builder": "@nguniversal/builders:ssr-dev-server",
          "configurations": {
            "development": {
              "browserTarget": "page-builder:build:development",
              "serverTarget": "page-builder:server:development"
            },
            "production": {
              "browserTarget": "page-builder:build:production",
              "serverTarget": "page-builder:server:production"
            }
          },
          "defaultConfiguration": "development"
        },
        "prerender": {
          "builder": "@nguniversal/builders:prerender",
          "options": {
            "routes": ["/"]
          },
          "configurations": {
            "production": {
              "browserTarget": "page-builder:build:production",
              "serverTarget": "page-builder:server:production"
            },
            "development": {
              "browserTarget": "page-builder:build:development",
              "serverTarget": "page-builder:server:development"
            }
          },
          "defaultConfiguration": "production"
        }
      }
    }
  }
}
